<div class="container">
   <div class="row">
     <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
       <h1><%= t('views.user_sessions.new.title') %></h1>
       <%= form_with url: login_path, local: true do |f| %>
         <div class="form-group">
           <%= f.label t('views.user_sessions.new.email') %>
           <%= f.text_field :email, class: 'form-control' %>
         </div>
         <div class="form-group">
           <%= f.label t('views.user_sessions.new.password') %>
           <%= f.password_field :password, class: 'form-control' %>
         </div>
         <div class="actions">
           <%= f.submit t('views.user_sessions.new.title'), class: 'btn btn-primary' %>
         </div>
       <% end %>
       <div class='text-center'>
         <%= link_to t('views.user_sessions.new.signup'), new_user_path %>
         <a href="#"><%= t('views.user_sessions.new.forget_password') %></a>
       </div>
     </div>
   </div>
 </div>