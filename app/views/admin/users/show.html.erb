<% content_for(:title, 'ユーザー詳細') %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><h1><%= 'ユーザー詳細' %></h1>
      <%= link_to t('defaults.destroy'), admin_user_path, method: :delete, data: { confirm: t('defaults.message.confirm') }, class: 'btn btn-danger float-right' %>
      <%= link_to t('defaults.edit'), edit_admin_user_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:full_name)) %></th>
          <td><%= @user.decorate.full_name %></td>
        </tr>
        <tr>
        <th scope="row"><%= t(User.human_attribute_name(:role)) %></th>
        <td><%= @user.role_i18n %></td>
      </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:avatar)) %></th>
          <td><%= image_tag @user.avatar.url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>