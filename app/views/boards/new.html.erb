<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with(model: @board, local: true) do |f| %>
        <%= render "shared/errors.full_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', row: '10' %>
        </div>
        <div class="form-group">
          <%= f.label :board_image %>
          <%= f.file_field :board_image, id: 'board_board_image', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= image_tag (@board.board_image.url)%>
        </div>
        <%= f.submit (t 'defaults.sign_up'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
